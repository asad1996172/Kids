<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
    android:background="@color/colorPrimary"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:clickable="true"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="155dp"

        card_view:cardCornerRadius="4dp">

        <ImageView
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>
        <ImageView
            android:src="@drawable/abc"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>

        <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
            android:layout_width="180dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="20dp"
            android:layout_height="20dp"
            app:rcBackgroundColor="#e3e3e3"
            app:rcBackgroundPadding="2dp"
            app:rcMax="100"
            app:rcSecondaryProgress="60"
            app:rcSecondaryProgressColor="@color/colorPrimaryLight"
            app:rcProgress="50"
            app:rcProgressColor="@color/colorPrimary"
            app:rcRadius="10dp" />


    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/card_view"
        android:layout_marginRight="10dp"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view1"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="155dp"

        card_view:cardCornerRadius="4dp">

        <ImageView
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>
        <ImageView
            android:src="@drawable/a123"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>
        <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
            android:layout_width="180dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="20dp"
            android:layout_height="20dp"
            app:rcBackgroundColor="#e3e3e3"
            app:rcBackgroundPadding="2dp"
            app:rcMax="100"
            app:rcSecondaryProgress="80"
            app:rcSecondaryProgressColor="@color/colorPrimaryLight"
            app:rcProgress="70"
            app:rcProgressColor="@color/colorPrimary"
            app:rcRadius="10dp" />


    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/card_view1"
        android:layout_marginRight="10dp"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view2"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="155dp"

        card_view:cardCornerRadius="4dp">

        <ImageView
            android:background="#ffffff"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>
        <ImageView
            android:src="@drawable/things"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"/>
        <com.akexorcist.roundcornerprogressbar.RoundCornerProgressBar
            android:layout_width="180dp"
            android:layout_marginTop="100dp"
            android:layout_marginLeft="20dp"
            android:layout_height="20dp"
            app:rcBackgroundColor="#e3e3e3"
            app:rcBackgroundPadding="2dp"
            app:rcMax="100"
            app:rcSecondaryProgress="40"
            app:rcSecondaryProgressColor="@color/colorPrimaryLight"
            app:rcProgress="30"
            app:rcProgressColor="@color/colorPrimary"
            app:rcRadius="10dp" />


    </android.support.v7.widget.CardView>

</RelativeLayout>
